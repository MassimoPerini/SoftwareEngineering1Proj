<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<ScrollPane prefHeight="326.0" prefWidth="465.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.GC_06.Client.ViewController.FxViewController.PlayerBoard.PlayerBoardPresenter">
    <content>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" fx:id="mainView">
    <top>
        <Label text="Your board" BorderPane.alignment="CENTER" fx:id="labelBoard" />
    </top>
    <center>
        <VBox BorderPane.alignment="CENTER" styleClass="player-board-view">
            <children>
                <HBox styleClass="container">
                    <children>
                        <HBox fx:id="yellowContainer" styleClass="yellow" />
                        <HBox fx:id="purpleContainer" styleClass="purple" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <HBox  fx:id="greenContainer" styleClass="green" />
                        <HBox  fx:id="blueContainer" styleClass="blue" />
                    </children>
                </HBox>
                <HBox styleClass="resource-container">
                    <Label fx:id="money" styleClass="label-resource"/>
                    <Label fx:id="wood" styleClass="label-resource"/>
                    <Label fx:id="stone" styleClass="label-resource"/>
                    <Label fx:id="servant" styleClass="label-resource"/>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Military Points" />
                <Label text="Faith Points" GridPane.rowIndex="1" />
                <Label text="Victory Points" GridPane.rowIndex="2" />
                <Label text="Label" GridPane.columnIndex="1" fx:id="military" />
                <Label text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="faith" />
                <Label text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="victory" />
            </children>
        </GridPane>
    </bottom>
</BorderPane>
    </content>
</ScrollPane>
